

<div class="d-flex justify-content-center">
  <div class="log-in-container">
    <h2 class="text-center mt-5">Forgot your password?</h2>
    <div class="log-in-form mt-3">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions d-flex justify-content-end align-items-center me-1 mt-4">
          <%= f.button :submit, "Reset password", class:"green-white-button" %>
        <div class="ms-auto me-1">
          <%= render "devise/shared/links"%>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
