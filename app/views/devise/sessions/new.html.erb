<div class="d-flex justify-content-center">
  <div class="log-in-container">
    <h2 class="text-center mt-5">Bonfluencer</h2>
    <div class="log-in-form mt-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
        </div>

        <div class="form-actions d-flex justify-content-end align-items-center me-1 mt-4">
        <div class="further-links me-auto ms-1">
          <%= render "devise/shared/links" %>
        </div>
          <%= f.button :submit, "Log in", class:"green-white-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
