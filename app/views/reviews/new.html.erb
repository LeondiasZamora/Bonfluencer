<div class="d-flex justify-content-center">
  <div class="log-in-container">
    <h2 class="text-center mt-5">Send <%= @review.user.email %> a message</h2>
    <div class="log-in-form mt-3">
      <%= simple_form_for @review do |f| %>
        <div class="form-inputs">
          <%= f.input :content,
                      required: true %>
        </div>

        <div class="form-actions d-flex justify-content-end align-items-center me-1 mt-4">
          <%= f.button :submit, "Send", class:"green-white-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
